class Area {
	constructor() {
		this.entities = []
		this.toAdd = []
		this.toRemove = []
	}

	update(dt) {
		if (this.toAdd.length > 0) {
			for (var entity in this.toAdd) {
				entity.area = this
				this.entities.add(entity)

				entity.addComponents()
				entity.init()
			}

			this.toAdd.clear()
		}

		if (this.toRemove.length > 0) {
			for (var entity in this.toRemove) {
				this.entities.remove(entity)
				entity.done = true
				entity.destroy()
			}

			this.toRemove.clear()
		}

		for (var entity in this.entities) {
			if (!entity.active) {
				continue
			}

			entity.update(dt)

			if (entity.done) {
				this.toRemove.add(entity)
			}
		}
	}

	render() {
		for (var entity in this.entities) {
			if (!entity.visible) {
				continue
			}
			
			entity.render()
		}
	}

	add(entity) {
		this.toAdd.add(entity)
	}
}